@model SchoolManager.Models.Subjects

@{
    ViewData["Title"] = "Details";
}

<h1>Λεπτομέρειες Μαθημάτων</h1>

<div>
    <h4>Μαθήματα</h4>
    <hr />
<dl class="row">
        <dt class = "col-sm-2">
            ID Μαθήματος
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectId)
        </dd>
        <dt class = "col-sm-2">
            Τομέας
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department)
        </dd>
        <dt class = "col-sm-2">
            Μαθητές
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentAmount)
        </dd>
        <dt class = "col-sm-2">
            Βαθμός
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequiredGrade)
        </dd>
        <dt class = "col-sm-2">
            Διδακτικές Ώρες
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequiredHours)
        </dd>
        <dt class = "col-sm-2">
            Ελάχιστα Τεστ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequiredTests)
        </dd>
        <dt class = "col-sm-2">
            Συνολικά Τεστ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalTests)
        </dd>
        <dt class = "col-sm-2">
            Μέγιστες Διδακτικές Ώρες
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalHours)
        </dd>
        <dt class = "col-sm-2">
            Απουσίες
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxAbsentHours)
        </dd>
        <dt class = "col-sm-2">
            Καθηγητές στην Τάξη
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeacherCountInClass)
        </dd>
        <dt class = "col-sm-2">
            Καθηγητές
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeacherRegistered)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Πίσω στην λίστα</a>
</div>
